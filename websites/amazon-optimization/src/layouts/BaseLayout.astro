---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  keywords?: string[];
}

const { title, description, keywords = [] } = Astro.props;
const siteTitle = "Amazon 优化指南";
const fullTitle = title ? `${title} | ${siteTitle}` : siteTitle;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}
    {keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    {description && <meta name="twitter:description" content={description} />}
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white border-b border-gray-200">
      <nav class="max-w-5xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
            {siteTitle}
          </a>
          <div class="flex items-center gap-6">
            <a href="/" class="text-sm text-gray-600 hover:text-gray-900">首页</a>
            <a href="/#categories" class="text-sm text-gray-600 hover:text-gray-900">分类</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="min-h-[calc(100vh-200px)]">
      <slot />
    </main>

    <footer class="border-t border-gray-200 bg-white py-8 mt-auto">
      <div class="max-w-5xl mx-auto px-4">
        <div class="text-center text-sm text-gray-600">
          <p>© {new Date().getFullYear()} {siteTitle}</p>
        </div>
      </div>
    </footer>
  </body>
</html>
