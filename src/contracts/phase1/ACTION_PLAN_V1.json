{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://liye.ai/contracts/phase1/ACTION_PLAN_V1.json",
  "title": "ACTION_PLAN_V1",
  "description": "Action Plan schema for Phase1 Week4 - frozen execution plan with approval requirement",
  "type": "object",
  "required": [
    "plan_id",
    "trace_id",
    "tenant_id",
    "created_at",
    "policy_version",
    "intent",
    "actions",
    "GUARANTEE"
  ],
  "properties": {
    "plan_id": {
      "type": "string",
      "pattern": "^plan-[a-zA-Z0-9-]+$",
      "description": "Unique plan identifier, format: plan-<trace_id>"
    },
    "trace_id": {
      "type": "string",
      "description": "Associated trace identifier"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of plan creation"
    },
    "policy_version": {
      "type": "string",
      "description": "Version of the policy used to generate this plan"
    },
    "intent": {
      "type": "string",
      "description": "Brief description of the user's intent"
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": [
          "action_id",
          "action_type",
          "tool",
          "arguments",
          "risk_level",
          "requires_approval",
          "dry_run_only"
        ],
        "properties": {
          "action_id": {
            "type": "string",
            "pattern": "^action-[0-9]+$",
            "description": "Unique action identifier within this plan"
          },
          "action_type": {
            "type": "string",
            "enum": ["read", "analyze", "write", "delete", "execute", "send"],
            "description": "Type of action"
          },
          "tool": {
            "type": "string",
            "description": "Tool to be invoked"
          },
          "arguments": {
            "type": "object",
            "description": "Arguments to pass to the tool"
          },
          "risk_level": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Risk level of this action"
          },
          "requires_approval": {
            "type": "boolean",
            "description": "Whether this action requires explicit approval"
          },
          "dry_run_only": {
            "type": "boolean",
            "description": "Whether this action is dry-run only (Week4: always true for write actions)"
          }
        }
      },
      "description": "List of planned actions"
    },
    "GUARANTEE": {
      "type": "object",
      "required": ["no_real_write", "write_calls_attempted"],
      "properties": {
        "no_real_write": {
          "type": "boolean",
          "const": true,
          "description": "Guarantee that no real write operations will be performed"
        },
        "write_calls_attempted": {
          "type": "integer",
          "const": 0,
          "description": "Number of real write calls attempted (Week4: always 0)"
        }
      },
      "description": "Week4 hard guarantees - no real writes"
    }
  },
  "additionalProperties": false
}
