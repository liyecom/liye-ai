{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://liye.os/contracts/reasoning/explanation.schema.json",
  "title": "Explanation Schema v0.1",
  "description": "Schema for explanation output from reasoning engine",
  "type": "object",
  "required": [
    "observation_id",
    "severity",
    "top_causes",
    "cause_evidence_map",
    "recommendations",
    "counterfactuals",
    "rule_version",
    "generated_at"
  ],
  "properties": {
    "observation_id": {
      "type": "string",
      "description": "The observation/decision ID being explained"
    },
    "severity": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"],
      "description": "Severity level of the observation"
    },
    "top_causes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "description": "Top 1-3 root causes ranked by evidence satisfaction and confidence",
      "items": {
        "type": "object",
        "required": ["cause_id", "description", "confidence", "rationale"],
        "properties": {
          "cause_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "confidence": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "rationale": {
            "type": "array",
            "items": { "type": "string" }
          },
          "evidence_satisfied": {
            "type": "boolean"
          }
        }
      }
    },
    "cause_evidence_map": {
      "type": "object",
      "description": "Map of cause_id to evidence array",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "evidence.schema.json"
        }
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Recommended actions to address the observation",
      "items": {
        "type": "object",
        "required": ["action_id", "risk_level"],
        "properties": {
          "action_id": {
            "type": "string"
          },
          "risk_level": {
            "type": "string",
            "enum": ["LOW", "MEDIUM", "HIGH"]
          },
          "params": {
            "type": "object"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "counterfactuals": {
      "type": "array",
      "description": "What-if scenarios",
      "items": {
        "type": "object",
        "required": ["if", "expected", "risk_level"],
        "properties": {
          "if": {
            "type": "string",
            "description": "The counterfactual condition"
          },
          "expected": {
            "type": "string",
            "description": "Expected outcome if condition is met"
          },
          "risk_level": {
            "type": "string",
            "enum": ["LOW", "MEDIUM", "HIGH"]
          }
        }
      }
    },
    "rule_version": {
      "type": "string",
      "description": "Version of the reasoning rule used (e.g., 'ACOS_TOO_HIGH.yaml@v0.1')"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this explanation was generated"
    },
    "trace_id": {
      "type": "string",
      "description": "Optional trace ID for audit trail"
    }
  },
  "additionalProperties": false
}
