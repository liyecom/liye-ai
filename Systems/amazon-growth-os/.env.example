# ==============================================
# Amazon Growth OS - Environment Variables
# Copy this file to .env and fill in your values
# ==============================================

# Required: Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=sk-ant-xxx

# Optional: SellersSprite API Key (for keyword research)
SELLERSPRITE_API_KEY=

# Optional: Amazon Advertising API (for automated bid adjustments)
# AMAZON_ADS_CLIENT_ID=
# AMAZON_ADS_CLIENT_SECRET=
# AMAZON_ADS_REFRESH_TOKEN=
# AMAZON_ADS_PROFILE_ID=

# Database Configuration
DATABASE_PATH=/app/data/growth_os.duckdb

# Qdrant Configuration (when running in Docker)
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Execution Mode
# Options: development, staging, production
ENVIRONMENT=development

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Dashboard Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# ==============================================
# Notification System (Optional)
# ==============================================

# Email Notifications (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Slack Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Push Notifications (choose one provider)
# Pushover
# PUSHOVER_USER_KEY=your-user-key
# PUSHOVER_API_TOKEN=your-api-token

# Pushbullet
# PUSHBULLET_API_KEY=your-api-key

# Custom Webhook
# WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
# WEBHOOK_AUTH_TOKEN=your-bearer-token
