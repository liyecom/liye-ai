# Site Design Contract Instance Template
# Generated by: ui-ux-pro-max Skill
# Target: tracks/<track_id>/site-design.contract.yaml
# =============================================================================
#
# TEMPLATE VARIABLES:
#   ${TRACK_ID}        - Project track identifier
#   ${STACK}           - Technical stack array
#   ${PRIMARY_COLOR}   - Primary brand color
#   ${SECONDARY_COLOR} - Secondary brand color
#   ${BACKGROUND}      - Background color
#   ${SURFACE}         - Surface/card color
#   ${TEXT_PRIMARY}    - Primary text color
#   ${TEXT_SECONDARY}  - Secondary text color
#   ${ACCENT}          - Accent color
#   ${HEADING_FONT}    - Heading typography
#   ${BODY_FONT}       - Body typography
#   ${MONO_FONT}       - Monospace typography
#   ${STYLE_MODE}      - light | dark | both
#   ${ANTI_PATTERNS}   - Array of forbidden patterns
#
# =============================================================================

version: "1.0"
kind: site-design
scope: track-instance
enforcement: warning

inherits:
  from: _meta/contracts/site-design.contract.yaml

# -----------------------------------------------------------------------------
# SITE IDENTITY
# -----------------------------------------------------------------------------
site:
  name: ${TRACK_ID}
  stack: ${STACK}

# -----------------------------------------------------------------------------
# DESIGN TOKENS
# -----------------------------------------------------------------------------
tokens:
  colors:
    primary: "${PRIMARY_COLOR}"
    secondary: "${SECONDARY_COLOR}"
    background: "${BACKGROUND}"
    surface: "${SURFACE}"
    text:
      primary: "${TEXT_PRIMARY}"
      secondary: "${TEXT_SECONDARY}"
    accent: "${ACCENT}"
    error: "#EF4444"
    success: "#22C55E"
    warning: "#F59E0B"

  typography:
    heading_font: "${HEADING_FONT}"
    primary_font: "${BODY_FONT}"
    mono_font: "${MONO_FONT}"
    max_fonts: 2

    scale:
      base: 16
      ratio: 1.25

    weights:
      normal: 400
      medium: 500
      semibold: 600
      bold: 700

  spacing:
    base_unit: 8
    scale: [0, 4, 8, 12, 16, 24, 32, 48, 64, 96, 128]

  borders:
    radius:
      none: 0
      sm: 4
      md: 8
      lg: 12
      xl: 16
      full: 9999
    width:
      default: 1
      thick: 2

  shadows:
    allow_shadows: true
    max_elevation: 3

# -----------------------------------------------------------------------------
# STYLE SYSTEM
# -----------------------------------------------------------------------------
style:
  allowed_modes: ${STYLE_MODES}
  default_mode: ${DEFAULT_MODE}
  palette_strategy: semantic

# -----------------------------------------------------------------------------
# LAYOUT CONSTRAINTS
# -----------------------------------------------------------------------------
constraints:
  layout:
    max_width_px: 1200
    content_max_width_px: 800
    min_mobile_width_px: 320
    grid:
      columns: 12
      gutter_px: 24
    breakpoints:
      sm: 640
      md: 768
      lg: 1024
      xl: 1280
      2xl: 1536

  motion:
    allow_heavy_runtime_animation: false
    max_animation_duration_ms: 500
    prefer_reduced_motion: true

  images:
    require_alt_text: true
    max_hero_size_kb: 500
    allowed_formats: [webp, png, jpg, svg]

# -----------------------------------------------------------------------------
# UX REQUIREMENTS
# -----------------------------------------------------------------------------
ux:
  accessibility:
    min_contrast_ratio: 4.5
    min_contrast_ratio_large: 3.0
    require_focus_indicators: true
    require_skip_links: true
    require_aria_labels: true

  anti_patterns: ${ANTI_PATTERNS}

  navigation:
    require_breadcrumbs: false
    max_menu_depth: 3
    require_search: false

  forms:
    require_labels: true
    require_error_messages: true
    allow_inline_validation: true

# -----------------------------------------------------------------------------
# NOTES (for human readers)
# -----------------------------------------------------------------------------
notes:
  generated_by: ui-ux-pro-max
  knowledge_sources:
    - knowledge/design/ui-ux/ui_styles.yaml
    - knowledge/design/ui-ux/color_schemes.yaml
    - knowledge/design/ui-ux/font_pairings.yaml
  style_reference: "${STYLE_REFERENCE}"
  color_reference: "${COLOR_REFERENCE}"
  font_reference: "${FONT_REFERENCE}"
